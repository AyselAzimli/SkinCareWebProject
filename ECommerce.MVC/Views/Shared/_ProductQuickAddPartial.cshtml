@model ProductViewModel

<div class="modal fade modalDemo popup-quickadd" id="quick_add_@Model.Id">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="header">
                <span class="icon-close icon-close-popup" data-bs-dismiss="modal"></span>
            </div>

            <div class="wrap">

                <!-- Product Info -->
                <div class="tf-product-info-item">
                    <div class="image">
                        <img src="~/images/products/@Model.CoverImageName"
                             alt="@Model.Name"
                             style="width: 100%; height: auto; object-fit: cover;">
                    </div>
                    <div class="content">
                        <a href="product-detail.html">@Model.Name</a>
                        <div class="tf-product-info-price">
                            <div class="price">$@Model.Variants?.FirstOrDefault()?.Price</div>
                        </div>
                    </div>
                </div>

                <!-- Variant Picker -->
                <div class="tf-product-info-variant-picker mb_15">
                    <div class="variant-picker-item">
                        <div class="variant-picker-label">
                            Size: <span class="fw-6 variant-picker-label-value">@Model.Variants?.FirstOrDefault()?.Name</span>
                        </div>
                        <div class="variant-picker-values">

                            @{
                                var isFirst = true;

                                @foreach (var item in Model.Variants ?? [])
                                {
                                    <input type="radio"
                                           name="variant-@Model.Id"
                                           id="variant-@item.Id-@Model.Id"
                                           value="@item.Id"
                                    @(isFirst ? "checked" : "") />

                                    <label class="style-text"
                                           for="variant-@item.Id-@Model.Id"
                                           data-value="@item.Name"
                                           data-price="@item.Price">
                                        <p>@item.Name</p>
                                    </label>

                                    isFirst = false;
                                }

                            }


                        </div>
                    </div>
                </div>

                <!-- Quantity -->
                <div class="tf-product-info-quantity mb_15">
                    <div class="quantity-title fw-6">Quantity</div>
                    <div class="wg-quantity">
                        <span class="btn-quantity minus-btn">-</span>
                        <input type="number" name="number" value="1" min="1">
                        <span class="btn-quantity plus-btn">+</span>
                    </div>
                </div>

                <!-- Buy Buttons -->
                <div class="tf-product-info-buy-button">
                    <form asp-controller="Basket" asp-action="Add" method="post">

                        <!-- Correct hidden inputs -->
                        <input type="hidden" name="productVariantId" id="selectedVariant-@Model.Id"
                               value="@Model.Variants?.FirstOrDefault()?.Id" />
                        <input type="hidden" name="quantity" value="1" id="quantityInput-@Model.Id" />

                        <button type="submit" class="tf-btn btn-fill btn-add-to-cart">
                            Add to cart
                            <span class="tf-qty-price">$@(Model.Variants?.FirstOrDefault()?.Price ?? 0)</span>
                        </button>

                        <div class="tf-product-btn-wishlist btn-icon-action">
                            <i class="icon-heart"></i>
                            <i class="icon-delete"></i>
                        </div>

                        <a href="#compare"
                           data-bs-toggle="offcanvas"
                           aria-controls="offcanvasLeft"
                           class="tf-product-btn-wishlist box-icon bg_white compare btn-icon-action">
                            <span class="icon icon-compare"></span>
                            <span class="icon icon-check"></span>
                        </a>

                        <div class="w-100">
                            <a href="#" class="btns-full">
                                Buy with <img src="~/images/payments/paypal.png" alt="PayPal">
                            </a>
                            <a href="#" class="payment-more-option">More payment options</a>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {

        const quickAddModals = document.querySelectorAll('.popup-quickadd');

        quickAddModals.forEach(modal => {
            const modalId = modal.id;
            const productId = modalId.replace('quick_add_', '');

            // Elements
            const variantRadios = modal.querySelectorAll(`input[type="radio"][name="variant-${productId}"]`);
            const priceDisplay = modal.querySelector('.tf-product-info-price .price');
            const cartPriceDisplay = modal.querySelector('.tf-qty-price');
            const variantLabel = modal.querySelector('.variant-picker-label-value');
            const quantityInput = modal.querySelector('input[name="number"]');
            const minusBtn = modal.querySelector('.minus-btn');
            const plusBtn = modal.querySelector('.plus-btn');
            const hiddenVariantInput = modal.querySelector(`#selectedVariant-${productId}`);
            const hiddenQuantityInput = modal.querySelector(`#quantityInput-${productId}`);

            // Store variant data (price & name)
            const variants = {};
            variantRadios.forEach(radio => {
                const label = modal.querySelector(`label[for="${radio.id}"]`);
                if (label) {
                    variants[radio.id] = {
                        name: label.dataset.value,
                        price: parseFloat(label.dataset.price)
                    };
                }
            });

            // Function to update prices & hidden inputs
            function updatePrices() {
                const selectedRadio = modal.querySelector(`input[type="radio"][name="variant-${productId}"]:checked`);
                const quantity = parseInt(quantityInput.value) || 1;

                // Update hidden input for quantity
                if (hiddenQuantityInput) {
                    hiddenQuantityInput.value = quantity;
                }

                if (selectedRadio && variants[selectedRadio.id]) {
                    const variant = variants[selectedRadio.id];
                    const totalPrice = (variant.price * quantity).toFixed(2);

                    priceDisplay.textContent = `$${variant.price.toFixed(2)}`;
                    cartPriceDisplay.textContent = `$${totalPrice}`;
                    variantLabel.textContent = variant.name;

                    // Update hidden input with ProductVariantId
                    if (hiddenVariantInput) {
                        hiddenVariantInput.value = selectedRadio.value;
                    }
                }
            }

            // Event listeners
            variantRadios.forEach(radio => radio.addEventListener('change', updatePrices));
            if (minusBtn) minusBtn.addEventListener('click', () => setTimeout(updatePrices, 50));
            if (plusBtn) plusBtn.addEventListener('click', () => setTimeout(updatePrices, 50));
            if (quantityInput) {
                quantityInput.addEventListener('input', updatePrices);
                quantityInput.addEventListener('change', updatePrices);
            }

            // Initialize hidden inputs and prices when modal is shown
            modal.addEventListener('shown.bs.modal', () => updatePrices());

            const firstSelected = modal.querySelector(`input[name="variant-${productId}"]:checked`);
            if (firstSelected && hiddenVariantInput) {
                hiddenVariantInput.value = firstSelected.value;
            }

            // Initial calculation
            updatePrices();
        });
    });
</script>