@model ProductViewModel

<div class="modal fade modalDemo popup-quickadd" id="quick_add_@Model.Id">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="header">
                <span class="icon-close icon-close-popup" data-bs-dismiss="modal"></span>
            </div>

            <div class="wrap">

                <!-- Product Info -->
                <div class="tf-product-info-item">
                    <div class="image">
                        <img src="~/images/products/@Model.CoverImageName"
                             alt="@Model.Name"
                             style="width: 100%; height: auto; object-fit: cover;">
                    </div>
                    <div class="content">
                        <a href="product-detail.html">@Model.Name</a>
                        <div class="tf-product-info-price">
                            <div class="price">$@Model.Variants?.FirstOrDefault()?.Price</div>
                        </div>
                    </div>
                </div>

                <!-- Variant Picker -->
                <div class="tf-product-info-variant-picker mb_15">
                    <div class="variant-picker-item">
                        <div class="variant-picker-label">
                            Size: <span class="fw-6 variant-picker-label-value">@Model.Variants?.FirstOrDefault()?.Name</span>
                        </div>
                        <div class="variant-picker-values">

                            @{
                                var isFirst = true;

                                foreach (var item in Model.Variants ?? [])
                                {
                                    <input type="radio"
                                           name="size-@Model.Id"
                                           id="values-@item.Name-@Model.Id"
                                           value="@item.Name"
                                    @(isFirst ? "checked" : "") />

                                    <label class="style-text"
                                           for="values-@item.Name-@Model.Id"
                                           data-value="@item.Name"
                                           data-price="@item.Price">
                                        <p>@item.Name</p>
                                    </label>

                                    isFirst = false;
                                }
                            }


                        </div>
                    </div>
                </div>

                <!-- Quantity -->
                <div class="tf-product-info-quantity mb_15">
                    <div class="quantity-title fw-6">Quantity</div>
                    <div class="wg-quantity">
                        <span class="btn-quantity minus-btn">-</span>
                        <input type="number" name="number" value="1" min="1">
                        <span class="btn-quantity plus-btn">+</span>
                    </div>
                </div> 

                <!-- Buy Buttons -->
                <div class="tf-product-info-buy-button">
                    <form asp-controller="Basket" asp-action="Add" method="post">
