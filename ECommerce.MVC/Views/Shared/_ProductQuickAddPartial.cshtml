                           aria-controls="offcanvasLeft"
                           class="tf-product-btn-wishlist box-icon bg_white compare btn-icon-action">
                            <span class="icon icon-compare"></span>
                            <span class="icon icon-check"></span>
                        </a>

                        <div class="w-100">
                            <a href="#" class="btns-full">
                                Buy with <img src="~/images/payments/paypal.png" alt="PayPal">
                            </a>
                            <a href="#" class="payment-more-option">More payment options</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Use a more specific selector
        const quickAddModals = document.querySelectorAll('.popup-quickadd');

        quickAddModals.forEach(modal => {
            const modalId = modal.id;
            const productId = modalId.replace('quick_add_', '');

            // More specific selector using the product ID
            const variantRadios = modal.querySelectorAll(`input[type="radio"][name="size-${productId}"]`);
            const priceDisplay = modal.querySelector('.tf-product-info-price .price');
            const cartPriceDisplay = modal.querySelector('.tf-qty-price');
            const variantLabel = modal.querySelector('.variant-picker-label-value');
            const quantityInput = modal.querySelector('input[name="number"]');
            const minusBtn = modal.querySelector('.minus-btn');
            const plusBtn = modal.querySelector('.plus-btn');
            const variants = {};

            // Store variant data
            variantRadios.forEach(radio => {
                const label = modal.querySelector(`label[for="${radio.id}"]`);
                if (label) {
                    const variantName = label.dataset.value;
                    const variantPrice = label.dataset.price;
                    variants[radio.id] = {
                        name: variantName,
                        price: parseFloat(variantPrice)
                    };
                }
            });

            function updatePrices() {
                const selectedRadio = modal.querySelector(`input[type="radio"][name="size-${productId}"]:checked`);
                if (selectedRadio && variants[selectedRadio.id]) {
                    const variant = variants[selectedRadio.id];
                    const quantity = parseInt(quantityInput.value) || 1;
                    const totalPrice = (variant.price * quantity).toFixed(2);

                    priceDisplay.textContent = `$${variant.price.toFixed(2)}`;
                    cartPriceDisplay.textContent = `$${totalPrice}`;
                    variantLabel.textContent = variant.name;
                }
            }




            


function changeQuantity(productId, change) {
    fetch(`/Cart/ChangeQuantity?productId=${productId}&change=${change}`, {
        method: 'POST'
    })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById('cartContainer').innerHTML = data.cartHtml;
            } else {
                alert('Failed to update quantity');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred');
        });
}

function updateCartCount() {
    fetch('/Basket/GetBasket')
        .then(response => response.json())
        .then(data => {
            const cartCountElement = document.querySelector('.cart-count');
            if (cartCountElement) {
                cartCountElement.textContent = data.totalCount;
            }
        })
        .catch(error => console.error('Error:', error));
}




            // Add change event listeners
            variantRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    console.log('Radio changed:', this.id); // Debug log
                    updatePrices();
                });
            });

            // Quantity button handlers
            if (minusBtn) {
                minusBtn.addEventListener('click', function () {
                    setTimeout(updatePrices, 50);
                });
            }

            if (plusBtn) {
                plusBtn.addEventListener('click', function () {
                    setTimeout(updatePrices, 50);
                });
            }

            if (quantityInput) {
                quantityInput.addEventListener('input', updatePrices);
                quantityInput.addEventListener('change', updatePrices);
            }

            // Initialize on modal shown
            modal.addEventListener('shown.bs.modal', function () {
                updatePrices();
            });
        });
    });

    function addToBasket(productId, quantity = 1) {
        fetch('/Basket/Add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: `productVariantId=${productId}&quantity=${quantity}`
        })
            .then(response => {
                if (response.ok) {
                    alert('Added to cart'); // optional toast
                    updateCartCount();      // update cart icon count
                } else {
                    alert('Failed to add to cart');
                }
            })
            .catch(err => console.error(err));
    }

    // Hook the button click
    document.querySelectorAll('.btn-add-to-cart').forEach(btn => {
        btn.addEventListener('click', function () {
            const productId = this.dataset.productId;

            // Get quantity from the modal input
            const modal = this.closest('.popup-quickadd');
            const quantityInput = modal.querySelector('input[name="number"]');
            const quantity = quantityInput ? parseInt(quantityInput.value) || 1 : 1;

            // Optionally get selected variant here if needed
            // const selectedVariantRadio = modal.querySelector('input[type="radio"]:checked');
            // const variantId = selectedVariantRadio ? selectedVariantRadio.value : productId;

            addToBasket(productId, quantity);
        });
    });

</script>